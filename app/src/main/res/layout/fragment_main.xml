<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/bgForms">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageCulture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_shape"
            android:clipToOutline="true"
            tools:src="@drawable/cultura" />

        <TextView
            android:id="@+id/textCulture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Культура"
            android:textAlignment="center"
            android:textSize="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageBrand"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_shape"
            android:clipToOutline="true"
            tools:src="@drawable/brand" />

        <TextView
            android:id="@+id/textBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Бренды"
            android:textAlignment="center"
            android:textSize="32dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imageАttractions"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_shape"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/attractions" />

        <TextView
            android:id="@+id/textАttractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Достопримечательности"
            android:textAlignment="center"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageАttractions" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>